<!doctype html>
<html>
<head>
    <title>DIVERSIFY</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body class="bg">
<div class="container">
<div class="login card">

    <h2><span class="fa fa-sign-in"></span> Login</h2>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label>Username/Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-primary btn-default btn-block">Login</button>
    </form>

    <hr>

    <p>Need an account? <a class="text-danger" href="/signup">Sign Up</a></p>
    <p>Or go <a class="text-warning" href="/">Home</a>.</p>


</div>
</div>
</body>
</html>
